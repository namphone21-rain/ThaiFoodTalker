<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:paddingTop="65dp"
        android:paddingBottom="5dp"
        android:id="@+id/food_header"
        android:text="Header"
        android:textStyle="bold"
        android:textSize="22dip"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"/>

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="2dp"
            android:textSize="20dip"
            android:textStyle="bold"
            android:textColor="#ffff00"
            android:text="This instruction is for a server."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffff00" />
        <TextView
            android:padding="2dp"
            android:textSize="15dip"
            android:textStyle="bold"
            android:textColor="#99ff33"
            android:text="โปรดเลือกอาหารที่คุณมีขาย จากด้านล่างนี้"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="13dip"
            android:textStyle="bold"
            android:textColor="#99ff33"
            android:text="(Please choose what you have in your menu from the list bellow.)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ListView
        android:background="@color/white"
        android:id="@+id/foodListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>
