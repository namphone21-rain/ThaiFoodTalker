<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <TextView
                android:textSize="20dip"
                android:text = "How to increase an app's volume?"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="18dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Press the volume up or down of the phone."
                />
            <TextView
                android:textSize="18dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. From the notification at the top press dropdown"/>
            <ImageView
                android:padding="20dp"
                android:background="@drawable/control_volume0"
                android:layout_width="220dp"
                android:layout_height="100dp" />
            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="5dp" />
            <ImageView
                android:padding="20dp"
                android:background="@drawable/control_volume1"
                android:layout_width="220dp"
                android:layout_height="100dp" />
            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="5dp" />
            <TextView
                android:textSize="18dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Adjust the music volume."/>
            <ImageView
                android:padding="20dp"
                android:background="@drawable/control_volume2"
                android:layout_width="220dp"
                android:layout_height="100dp" />
            <android.support.v4.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="5dp" />
            <ImageView
                android:padding="20dp"
                android:background="@drawable/control_volume3"
                android:layout_width="220dp"
                android:layout_height="100dp" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
